<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <ImageView
        android:id="@+id/bak"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/back"
        android:background="@drawable/bg_circle"
        android:layout_marginStart="20dp"
        android:layout_marginTop="45dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <EditText
        android:id="@+id/etjudul"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="15dp"
        android:layout_toEndOf="@id/bak"
        android:layout_marginStart="10dp"
        android:hint="Judul"
        android:textColorHint="@color/abumid"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:paddingLeft="60dp"
        android:paddingStart="63dp"
        android:background="@drawable/shape"
        android:backgroundTint="@color/abu" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/search"
        android:layout_alignStart="@id/etjudul"
        android:layout_alignTop="@id/etjudul"
        android:layout_alignBottom="@id/etjudul"
        android:layout_marginStart="20dp"
        android:elevation="2dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_search_results"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/etjudul"
        android:layout_marginTop="20dp"
        android:paddingHorizontal="8dp"/>

</RelativeLayout>
