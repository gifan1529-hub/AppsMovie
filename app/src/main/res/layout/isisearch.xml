<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp"
    android:id="@+id/cardsearch"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="120dp"
        android:layout_height="200dp"
        app:cardCornerRadius="12dp"
        android:layout_marginEnd="20dp">
        <ImageView
            android:id="@+id/card"
            android:layout_width="120dp"
            android:layout_height="200dp"
            android:src="@drawable/item"
            android:scaleType="centerCrop"
            />
</androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvjudul"
        android:layout_marginStart="140dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mission: Impossible - The Final Reckoning"
        android:textSize="20dp"
        android:fontFamily="@font/poppinsmedium"
        android:textColor="@color/white"
        />

    <TextView
        android:id="@+id/tvsub"
        android:layout_width="wrap_content"
        android:layout_marginStart="140dp"
        android:layout_height="wrap_content"
        android:text="Mission: Impossible - The Final Reckoning"
        android:textSize="15dp"
        android:layout_below="@+id/tvjudul"
        android:fontFamily="@font/poppinsmedium"
        android:textColor="@color/white"
        />

    <TextView
    android:id="@+id/tvyear"
    android:layout_width="wrap_content"
    android:layout_marginStart="140dp"
    android:layout_below="@+id/tvsub"
    android:layout_height="wrap_content"
    android:text="2025"
    android:textSize="10dp"
    android:fontFamily="@font/poppinsmedium"
    android:textColor="@color/white"
    />

    <TextView
        android:id="@+id/tvplot"
        android:layout_width="wrap_content"
        android:layout_marginStart="140dp"
        android:layout_below="@+id/tvyear"
        android:layout_height="wrap_content"
        android:text="After her son Hamnet dies, aged eleven, Agnes Shakespeare is struck with intense grief. As she mourns with her husband William, the pair struggle to come to terms with the frailty of life and the ruthlessness of the plague. Set "
        android:textSize="10dp"
        android:fontFamily="@font/poppinsmedium"
        android:textColor="@color/white"
        />

</RelativeLayout>