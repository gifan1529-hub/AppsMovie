<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="1090dp">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/gambar"
        android:layout_marginBottom="209dp"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/movie"
        android:layout_marginTop="380dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/movie"
        />

    <EditText
        android:layout_marginTop="90dp"
        android:id="@+id/etemail"
        android:layout_width="351dp"
        android:textColor="@color/white"
        android:layout_height="57dp"
        android:layout_below="@id/movie"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_shape"
        android:backgroundTint="@color/abu"
        android:hint="E - Mail"
        android:paddingLeft="15dp"
        android:textColorHint="@color/abumid"
        android:textSize="20dp"
        />

    <EditText
        android:layout_marginTop="20dp"
        android:id="@+id/etpass"
        android:layout_width="351dp"
        android:layout_height="57dp"
        android:layout_below="@id/etemail"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_shape"
        android:backgroundTint="@color/abu"
        android:textColor="@color/white"
        android:hint="Password"
        android:paddingLeft="15dp"
        android:textColorHint="@color/abumid"
        android:textSize="20dp"
        />

    <Button
        android:layout_marginTop="30dp"
        android:id="@+id/btnoke"
        android:layout_width="351dp"
        android:layout_height="57dp"
        android:layout_below="@id/etpass"
        android:layout_centerHorizontal="true"
        android:background="@drawable/button_shape"
        android:backgroundTint="@color/abu"
        android:textSize="20dp"
        android:fontFamily="@font/poppinsregular"
        android:text="Sign In"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_below="@+id/btnoke"
        android:layout_marginTop="17dp"
        >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dont you have an account ?"
        android:fontFamily="@font/poppinsregular"
        android:textSize="12dp"
        android:textColor="@color/white"
        />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Sign Up "
            android:fontFamily="@font/poppinsregular"
            android:textSize="12dp"
            android:textColor="@color/ungu"
            android:id="@+id/tvsignup"
            />
    </LinearLayout>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/buled"
        android:layout_marginTop="450dp"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/buledkiri"
        android:layout_marginStart="20dp"
        android:layout_marginTop="450dp"
        />

</RelativeLayout>